extends layout 

block content 
  h1 #{title}: #{category.name}

  if categoryHeadphones.length
    p #[strong Delete the following headphones before attempting to delete this category.]

    ul.headphone-grid.detail-headphone-grid
      each headphone in categoryHeadphones
        li
          - const formatPrice = (price) => {
            - return price.toFixed(2);
          - };
          a.headphone-detail-a(href=headphone.url)
            img.headphone-image(src=headphone.image alt=headphone.name)
            span #{headphone.name}
            span.price-span $ #{formatPrice(headphone.price)}
  else 
    p Do you really want to delete this category?

    form(method='POST' action='')
      div.form-group
        input#category-id.form-control(type='hidden', name='categoryId', required='true', value=category.id)
      button.btn.btn-primary(type='submit') Delete 
